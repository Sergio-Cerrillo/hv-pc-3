{
  "compilerOptions": {
    "jsx":"react-jsx",
    "outDir":"./dist",
    "rootDir":"./",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "server/**/*",
    "server/db.ts", 
    "src",
    "src/**/*" ],
    
  "exclude": [
    "node_modules" 
  ]
}
